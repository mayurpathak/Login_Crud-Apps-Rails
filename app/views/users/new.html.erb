<h1 align=center>Signup User </h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
<div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |form| %>
    <div class="form-group">
        <div class="control-label col-md-2">
            <%= form.label :username %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus:true %>
        </div>
      </div>
      <div class="form-group">
            <div class="control-label col-md-2">
                <%= form.label :email %>
              </div>
              <div class="col-sm-8">
                <%= form.email_field :email, class: "form-control", placeholder: "Enter Email"%>
              </div>
          </div>
          <div class="form-group">
                <div class="control-label col-md-2">
                    <%= form.label :password %>
                  </div>
                  <div class="col-sm-8">
                    <%= form.password_field :password, class: "form-control", placeholder: "Enter Password"%>
                  </div>
              </div>

            <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= form.submit "Sign up",  class: 'btn btn-primary btn-lg' %>
                  </div>
            </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "cancle request and return To article Listing", articles_path %> ]
    </div>
</div>
</div>
