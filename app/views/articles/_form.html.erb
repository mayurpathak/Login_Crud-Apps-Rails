<% if @articles.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
<% @articles.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<div class="row">
<div class="col-xs-12">
    <%= form_for(@articles, :html => {class: "form-horizontal", role: "form"}) do |form| %>
    <div class="form-group">
        <div class="control-label col-md-2">
            <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus:true %>
        </div>
      </div>
      <div class="form-group">
            <div class="control-label col-md-2">
                <%= form.label :description %>
              </div>
              <div class="col-sm-8">
                <%= form.text_area :description, rows:10, class: "form-control", placeholder: "Body of article"%>
              </div>
          </div>


            <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= form.submit class: 'btn btn-primary btn-lg' %>
                  </div>
            </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "cancle request and return To article Listing", articles_path %> ]
    </div>
</div>
</div>
